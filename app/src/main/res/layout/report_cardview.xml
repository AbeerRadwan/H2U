<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/timeicon"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:src="@drawable/ic_access_time_black_24dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    />

    <TextView
        android:id="@+id/time"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="12 Sep 2019 Monday"
        app:layout_constraintStart_toEndOf="@id/timeicon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/realText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget :"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/time"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"

        app:layout_constraintStart_toEndOf="@id/realText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="2dp"
        />


    <TextView
        android:id="@+id/BudgetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual :"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/real"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintStart_toEndOf="@id/BudgetText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/BudgetText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorBlueDARK"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>